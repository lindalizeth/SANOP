<h1>Listado del cronograma</h1>
<!--Buscador-->
<%= form_tag cronogramas_path, :method => 'get' do %> 
<% content_tag :label do %> 
Search term: 
<%= text_field_tag :search, params[:search] %> 
<%= submit_tag "Buscar", :name => nil %> 
<% end %> 
<% end %> 
<!--tabla index con atributos que van en la vista-->
<table class="table">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Lugar salida</th>
      <th>Ficha grupo</th>
      <th>Tipo salida</th>
      <th>Programa</th>
      <th>Descripcion</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>
 
  <tbody>
    <%= render @cronogramas %>
   
  </tbody>
</table>

<br>

<%= will_paginate @cronogramas, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente 
&raquo;' %> 
<br> 
Cronogramas: <%= @cronogramas.count %> 

<%= link_to 'Nuevo Municipio', new_cronograma_path, remote: true %>


